//
h4 Params

table.params-table
    tr
        td param
        td type
        td default
        td description
    tr
        td max_val
        td Number
        td 1
        td Maximum value
    tr
        td min_value
        td Number
        td 0
        td Minimum value
    tr
        td units
        td String
        td ""
        td Units to display
    tr
        td stroke_width
        td Number
        td 10
        td Width of the gauge's border
    tr
        td color
        td String (from Subtle.COLORS, hex or rgb)
        td COLORS['primary']
        td Main color
    tr
        td background_color
        td String (from Subtle.COLORS, hex or rgb)
        td COLORS['control']
        td Background color
    tr
        td hand_color
        td String (from Subtle.COLORS, hex or rgb)
        td COLORS['control']
        td Hand color
    tr
        td inner_padding
        td Number
        td 0
        td Makes the width of the gauge's bar thinner.
    tr
        td show_label
        td Boolean
        td true
        td Shows a label with the value
    tr
        td show_hand
        td Boolean
        td true
        td Shows the hand
    tr
        td linecap
        td String ("round", "butt")
        td "round"
        td Makes the gauge's endings round or square
    tr
        td opening_angle
        td Number
        td 0.5
        td The angle of the opening, from 0 (180 degree's arc) to 1 (full circle)
    tr
        td override_label
        td String
        td ""
        td A string to override the label's value
    tr
        td dial_offset
        td Number
        td 0
        td An angle (in radians) to shift where the gauge bar begins
    tr
        td background_fill
        td String
        td ""
        td Background color to fill the inner part of the gauge
    tr
        td font_size
        td Number
        td 36
        td Label's font size
    tr
        td limit_high
        td Number
        td NaN
        td Displays a 'danger zone' for high values (if NaN it's not shown)
    tr
        td limit_low
        td Number
        td NaN
        td Displays a 'danger zone' for low values (if NaN it's not shown)
  
    
    

