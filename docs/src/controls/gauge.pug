h3#gauge Gauge

p 
    | Use 
    code Subtle.Gauge(object, params)
    |  to display a simple gauge

//
h4 Example

div.h_layout(style="height:150px")
    div#gauge1(style="max-width:200px")
    div#gauge2(style="max-width:200px")
    div#gauge3(style="max-width:200px")
    div#gauge4(style="max-width:200px")

script.
    var gauge1 = new Subtle.Gauge("gauge1", {limit_high: 0.8, limit_low: 0.2});
    var gauge2 = new Subtle.Gauge("gauge2", {show_hand: true, linecap: "butt"});
    var gauge3 = new Subtle.Gauge("gauge3", {opening_angle: 0.3, units:"km/h", show_hand: false, inner_padding: 3});
    var gauge4 = new Subtle.Gauge("gauge4", {opening_angle: 1, show_hand: false, dial_offset:3.1415, units:"PSI", linecap: "butt"});

    gauge1.update(0.1);
    gauge2.update(0.5);
    gauge3.update(0.9);
    gauge4.update(0.35);

