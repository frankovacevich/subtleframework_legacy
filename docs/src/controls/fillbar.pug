h3#fillbar FillBar

p 
    | Use 
    code Subtle.Fillbar(object, params)
    |  to display vertical or horizontal bar

//
h4 Example

div.h_layout(style="height:150px")
    div#fillbar1(style="max-width:200px")
    div#fillbar2(style="max-width:200px")
    div#fillbar3(style="max-width:200px")
    div#fillbar4(style="max-width:200px")
    div#fillbar5(style="max-width:200px")

script.
    var fillbar1 = new Subtle.FillBar("fillbar1", {});
    var fillbar2 = new Subtle.FillBar("fillbar2", {vertical:true});
    var fillbar3 = new Subtle.FillBar("fillbar3", {vertical:true, smooth: true});
    var fillbar4 = new Subtle.FillBar("fillbar4", {units:" %", max_val:100, min_val: 0});
    var fillbar5 = new Subtle.FillBar("fillbar5", {vertical: true, show_label: false});
    
    fillbar1.update(0.3);
    fillbar4.update(45);
    fillbar5.update(0.5);
    window.setInterval(function(){
        let x = Math.random()/4+0.5;
        fillbar2.update(x);
        fillbar3.update(x);
    },250);
    
